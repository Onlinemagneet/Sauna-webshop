{% comment %}
  Homepage template - Werkende homepage met alle sections
{% endcomment %}

<div class="homepage">
  {% section 'hero-trio' %}
  {% section 'hero-impact' %}
  {% section 'social-proof' %}
  {% section 'benefit-pillars' %}
  {% section 'hero-duo' %}
  {% section 'pricing-belt' %}
  {% section 'process-steps' %}
  {% section 'before-after' %}
  {% section 'redlight-grid' %}
  {% section 'compare-band' %}
  {% section 'testimonials' %}
  {% section 'faq-accordion' %}
</div>

<style>
.homepage {
  min-height: 100vh;
}

/* Zorg dat alle sections zichtbaar zijn */
section {
  display: block !important;
  visibility: visible !important;
  opacity: 1 !important;
  min-height: 200px;
}

/* Fallback styling voor als CSS niet laadt */
.h0, .h1, .h2 {
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 1rem;
}

.h0 { font-size: 3rem; }
.h1 { font-size: 2.5rem; }
.h2 { font-size: 2rem; }

.btn {
  display: inline-block;
  padding: 1rem 2rem;
  background: #E63946;
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.2s ease;
}

.btn:hover {
  background: #d62828;
  transform: translateY(-2px);
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.text-center { text-align: center; }
.mb-2 { margin-bottom: 0.5rem; }
.mb-3 { margin-bottom: 1rem; }
.mb-4 { margin-bottom: 1.5rem; }
.mt-4 { margin-top: 1.5rem; }

.kicker {
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: #E63946;
  font-weight: 600;
}

.badge {
  display: inline-block;
  padding: 0.5rem 1rem;
  background: #FFD700;
  color: #0E0E0E;
  border-radius: 4px;
  font-size: 0.875rem;
  font-weight: 600;
}

/* Grid fallbacks */
.benefit-pillars__grid,
.product-showcase__grid,
.social-proof__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin: 2rem 0;
}

.pillar,
.product-card,
.social-proof__item {
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  text-align: center;
}

/* Hero fallbacks */
.hero-impact,
.hero-duo {
  padding: 4rem 0;
  text-align: center;
  background: linear-gradient(135deg, #F8F9FA 0%, #f0f0f0 100%);
}

.hero-impact h1,
.hero-duo h2 {
  color: #0E0E0E;
  margin-bottom: 1rem;
}

/* Process steps fallback */
.process-steps__timeline {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  margin: 2rem 0;
}

.process-step {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

.process-step__number {
  width: 60px;
  height: 60px;
  background: #E63946;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  font-weight: 800;
  flex-shrink: 0;
}

/* Before/After fallback */
.before-after__gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 2rem;
  margin: 2rem 0;
}

.before-after__item {
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}

.before-after__images {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0;
}

.before-after__image {
  aspect-ratio: 4/3;
  overflow: hidden;
}

.before-after__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.before-after__content {
  padding: 2rem;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .h0 { font-size: 2rem; }
  .h1 { font-size: 1.75rem; }
  .h2 { font-size: 1.5rem; }
  
  .benefit-pillars__grid,
  .product-showcase__grid,
  .social-proof__grid {
    grid-template-columns: 1fr;
  }
  
  .process-step {
    flex-direction: column;
    text-align: center;
  }
  
  .before-after__gallery {
    grid-template-columns: 1fr;
  }
  
  .before-after__images {
    grid-template-columns: 1fr;
  }
}
</style>
