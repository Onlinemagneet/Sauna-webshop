{% comment %}
  Red-Light Grid Section - Red-Light therapie producten
{% endcomment %}

<section class="redlight-grid">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-4">
        <h2 class="h2">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="redlight-grid__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    {% if section.settings.collection != blank %}
      <div class="redlight-grid__products">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <div class="product-card">
            {% if product.featured_image != blank %}
              <div class="product-card__image">
                <a href="{{ product.url }}">
                  <img 
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                  >
                </a>
              </div>
            {% endif %}
            
            <div class="product-card__content">
              <h3 class="product-card__title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              
              {% if product.description != blank %}
                <p class="product-card__description">{{ product.description | truncate: 100 }}</p>
              {% endif %}
              
              <div class="product-card__price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-sale">{{ product.price | money }}</span>
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="price-regular">{{ product.price | money }}</span>
                {% endif %}
              </div>
              
              <a href="{{ product.url }}" class="btn btn-secondary">
                {{ section.settings.button_text | default: "Bekijk product" }}
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    
    {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
      <div class="text-center mt-4">
        <a href="{{ section.settings.cta_url }}" class="btn">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
.redlight-grid {
  padding: 4rem 0;
  background: white;
}

.redlight-grid__subheading {
  font-size: 1.125rem;
  color: var(--muted);
  margin-top: 1rem;
}

.redlight-grid__products {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.product-card {
  background: white;
  border-radius: var(--radius);
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: 1px solid #f0f0f0;
}

.product-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

.product-card__image {
  aspect-ratio: 4/3;
  overflow: hidden;
}

.product-card__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.2s ease;
}

.product-card:hover .product-card__image img {
  transform: scale(1.05);
}

.product-card__content {
  padding: 1.5rem;
}

.product-card__title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.product-card__title a {
  color: var(--primary);
  text-decoration: none;
}

.product-card__title a:hover {
  color: var(--accent);
}

.product-card__description {
  color: var(--muted);
  line-height: 1.5;
  margin-bottom: 1rem;
}

.product-card__price {
  margin-bottom: 1rem;
}

.price-sale {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--accent);
}

.price-compare {
  font-size: 1rem;
  color: var(--muted);
  text-decoration: line-through;
  margin-left: 0.5rem;
}

.price-regular {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--primary);
}

@media (max-width: 768px) {
  .redlight-grid {
    padding: 2rem 0;
  }
  
  .redlight-grid__products {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  
  .product-card__content {
    padding: 1rem;
  }
}
</style>

{% schema %}
{
  "name": "Red-Light Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Red-Light Therapie"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Krachtige LED-apparaten voor thuis. Wetenschappelijk bewezen voordelen voor huid, spieren en herstel."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Bekijk product"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Section CTA text",
      "default": "Bekijk alle Red-Light producten"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Section CTA URL",
      "default": "/collections/red-light"
    }
  ],
  "presets": [
    {
      "name": "Red-Light Grid"
    }
  ]
}
{% endschema %}
