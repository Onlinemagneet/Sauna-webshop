{% comment %}
  Hero Impact Section - Confronterende hero met volledige bewerkbaarheid
{% endcomment %}

<section class="hero-impact" style="background: linear-gradient(135deg, {{ section.settings.bg_color | default: 'var(--bg)' }} 0%, {{ section.settings.bg_color_2 | default: '#f0f0f0' }} 100%);">
  <div class="container">
    <div class="hero-impact__content">
      {% if section.settings.kicker != blank %}
        <div class="kicker mb-2">{{ section.settings.kicker }}</div>
      {% endif %}
      
      <h1 class="h0 mb-3" style="color: {{ section.settings.heading_color | default: 'var(--primary)' }};">
        {{ section.settings.heading | default: "Stop met uitstellen.<br>Start met herstellen." }}
      </h1>
      
      {% if section.settings.subheading != blank %}
        <p class="hero-impact__subheading mb-4" style="color: {{ section.settings.subheading_color | default: 'var(--muted)' }};">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
      
      {% if section.settings.proof_badge != blank %}
        <div class="badge mb-4" style="background-color: {{ section.settings.badge_color | default: 'var(--highlight)' }}; color: {{ section.settings.badge_text_color | default: 'var(--primary)' }};">
          {{ section.settings.proof_badge }}
        </div>
      {% endif %}
      
      <div class="hero-impact__ctas">
        {% if section.settings.cta_1_text != blank and section.settings.cta_1_url != blank %}
          <a href="{{ section.settings.cta_1_url }}" class="btn" style="background-color: {{ section.settings.cta_1_color | default: 'var(--accent)' }};">
            {{ section.settings.cta_1_text }}
          </a>
        {% endif %}
        
        {% if section.settings.cta_2_text != blank and section.settings.cta_2_url != blank %}
          <a href="{{ section.settings.cta_2_url }}" class="btn btn-secondary" style="border-color: {{ section.settings.cta_2_color | default: 'var(--text)' }}; color: {{ section.settings.cta_2_color | default: 'var(--text)' }};">
            {{ section.settings.cta_2_text }}
          </a>
        {% endif %}
      </div>
    </div>
    
    {% if section.settings.background_image != blank %}
      <div class="hero-impact__image">
        <img 
          src="{{ section.settings.background_image | image_url: '2000x' }}"
          alt="{{ section.settings.background_image.alt | escape }}"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>
</section>

<style>
.hero-impact {
  padding: 6rem 0;
  text-align: center;
  position: relative;
  overflow: hidden;
  min-height: 80vh;
  display: flex;
  align-items: center;
}

.hero-impact__content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
}

.hero-impact__subheading {
  font-size: 1.25rem;
  line-height: 1.6;
}

.hero-impact__ctas {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.hero-impact__image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  opacity: {{ section.settings.image_opacity | default: 0.1 }};
}

.hero-impact__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

@media (max-width: 768px) {
  .hero-impact {
    padding: 4rem 0;
    min-height: 60vh;
  }
  
  .hero-impact__ctas {
    flex-direction: column;
    align-items: center;
  }
  
  .hero-impact__ctas .btn {
    width: 100%;
    max-width: 300px;
  }
}
</style>

