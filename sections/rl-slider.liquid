{% comment %}
  Red-Light Slider Section - Collectie of losse producten
{% endcomment %}

<section class="rl-slider">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-4">
        <h2 class="h2">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="rl-slider__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="rl-slider__container slider">
      <div class="slider-container">
        {% if section.settings.collection != blank %}
          {% for product in section.settings.collection.products limit: section.settings.limit %}
            {% render 'product-card', product: product %}
          {% endfor %}
        {% else %}
          {% for block in section.blocks %}
            {% if block.settings.product != blank %}
              {% render 'product-card', product: block.settings.product %}
            {% endif %}
          {% endfor %}
        {% endif %}
      </div>
    </div>
    
    {% if section.settings.collection != blank and section.settings.collection.url != blank %}
      <div class="text-center mt-4">
        <a href="{{ section.settings.collection.url }}" class="btn">Bekijk collectie</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
.rl-slider {
  padding: 4rem 0;
  background: white;
}

.rl-slider__subheading {
  font-size: 1.125rem;
  color: var(--muted);
  margin-top: 1rem;
}

.rl-slider__container {
  margin-top: 3rem;
}

.slider {
  overflow-x: auto;
  scroll-behavior: smooth;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.slider::-webkit-scrollbar {
  display: none;
}

.slider-container {
  display: flex;
  gap: 2rem;
  padding-bottom: 1rem;
}

.slider-container .product-card {
  min-width: 300px;
  flex-shrink: 0;
}

@media (max-width: 768px) {
  .rl-slider {
    padding: 2rem 0;
  }
  
  .slider-container {
    gap: 1rem;
  }
  
  .slider-container .product-card {
    min-width: 250px;
  }
}
</style>

{% schema %}
{
  "name": "Red-Light Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Red-Light selectie"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Losse apparaten voor herstel, energie en focus."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "limit",
      "label": "Number of products",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Red-Light Slider"
    }
  ]
}
{% endschema %}
