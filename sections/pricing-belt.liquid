{% comment %}
  Pricing Belt Section - Volledig bewerkbaar via Theme Editor
{% endcomment %}

<section class="pricing-belt" style="background: linear-gradient(135deg, {{ section.settings.bg_color_1 | default: 'var(--primary)' }} 0%, {{ section.settings.bg_color_2 | default: 'var(--accent)' }} 100%);">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-4">
        <h2 class="h2" style="color: {{ section.settings.heading_color | default: 'white' }};">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="pricing-belt__subheading" style="color: {{ section.settings.subheading_color | default: 'rgba(255,255,255,0.8)' }};">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="pricing-belt__grid">
      {% for block in section.blocks %}
        <div class="pricing-item" {{ block.shopify_attributes }} style="background: {{ block.settings.item_bg | default: 'rgba(255, 255, 255, 0.1)' }};">
          {% if block.settings.image != blank %}
            <div class="pricing-item__image">
              <img 
                src="{{ block.settings.image | image_url: '400x' }}"
                alt="{{ block.settings.label | escape }}"
                loading="lazy"
              >
            </div>
          {% endif %}
          
          <h3 class="pricing-item__label" style="color: {{ block.settings.label_color | default: 'white' }};">{{ block.settings.label }}</h3>
          <p class="pricing-item__sub" style="color: {{ block.settings.sub_color | default: 'rgba(255,255,255,0.8)' }};">{{ block.settings.sub }}</p>
          
          <div class="pricing-item__price" style="color: {{ block.settings.price_color | default: 'var(--highlight)' }};">
            {% if block.settings.product != blank %}
              Vanaf {{ block.settings.product.price | money }}
            {% else %}
              {{ block.settings.price_fallback }}
            {% endif %}
          </div>
          
          {% if block.settings.cta_text != blank and block.settings.cta_url != blank %}
            <a href="{{ block.settings.cta_url }}" class="btn btn-secondary" style="border-color: {{ block.settings.cta_color | default: 'white' }}; color: {{ block.settings.cta_color | default: 'white' }};">
              {{ block.settings.cta_text }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.pricing-belt {
  padding: 3rem 0;
  color: white;
}

.pricing-belt__subheading {
  font-size: 1.125rem;
  margin-top: 1rem;
}

.pricing-belt__grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.pricing-item {
  text-align: center;
  padding: 2rem 1rem;
  border-radius: var(--radius);
  transition: transform 0.2s ease;
}

.pricing-item:hover {
  transform: translateY(-4px);
}

.pricing-item__image {
  width: 80px;
  height: 80px;
  margin: 0 auto 1rem;
  border-radius: 50%;
  overflow: hidden;
}

.pricing-item__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.pricing-item__label {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.pricing-item__sub {
  font-size: 1rem;
  margin-bottom: 1rem;
}

.pricing-item__price {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .pricing-belt__grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .pricing-item {
    padding: 1.5rem 1rem;
  }
}

@media (max-width: 1024px) and (min-width: 769px) {
  .pricing-belt__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
</style>

