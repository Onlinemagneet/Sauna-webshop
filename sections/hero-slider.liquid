{% comment %}
  Hero Slider Section - Eenvoudige werkende versie
{% endcomment %}

<section class="hero-slider" style="background: linear-gradient(135deg, #0E0E0E 0%, #E63946 100%); color: white; padding: 6rem 0; text-align: center; min-height: 80vh; display: flex; align-items: center;">
  <div class="container">
    <div class="hero-slider__content">
      <div class="kicker mb-2" style="color: #E63946;">Premium Sauna's</div>
      
      <h1 class="h0 mb-3" style="color: white;">
        Stop met uitstellen.<br>Start met herstellen.
      </h1>
      
      <p class="hero-slider__subheading mb-4" style="color: rgba(255,255,255,0.9); font-size: 1.25rem; line-height: 1.6;">
        Diepe warmte. Rustige nachten. Verlichte spieren. Jouw herstelroutine begint hier.
      </p>
      
      <div class="badge mb-4" style="background: #FFD700; color: #0E0E0E;">500+ Tevreden klanten</div>
      
      <div class="hero-slider__ctas" style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        <a href="/collections/barrelsauna" class="btn" style="background: #E63946; color: white; padding: 1rem 2rem; text-decoration: none; border-radius: 8px; font-weight: 600;">
          Bekijk Barrelsauna's
        </a>
        
        <a href="/collections/huissauna" class="btn" style="background: transparent; color: white; border: 2px solid white; padding: 1rem 2rem; text-decoration: none; border-radius: 8px; font-weight: 600;">
          Ontdek Huissauna's
        </a>
      </div>
    </div>
  </div>
</section>

<style>
.hero-slider {
  position: relative;
  overflow: hidden;
}

.hero-slider__content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
}

.hero-slider__ctas .btn {
  transition: all 0.2s ease;
}

.hero-slider__ctas .btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.3);
}

@media (max-width: 768px) {
  .hero-slider {
    padding: 4rem 0;
    min-height: 60vh;
  }
  
  .hero-slider__ctas {
    flex-direction: column;
    align-items: center;
  }
  
  .hero-slider__ctas .btn {
    width: 100%;
    max-width: 300px;
  }
}
</style>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stop met uitstellen. Start met herstellen."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Diepe warmte. Rustige nachten. Verlichte spieren. Jouw herstelroutine begint hier."
    }
  ],
  "presets": [
    {
      "name": "Hero Slider"
    }
  ]
}
{% endschema %}
