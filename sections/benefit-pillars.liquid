{% comment %}
  Benefit Pillars Section - Volledig bewerkbaar via Theme Editor
{% endcomment %}

<section class="benefit-pillars" style="background-color: {{ section.settings.bg_color | default: 'white' }};">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-4">
        <h2 class="h2" style="color: {{ section.settings.heading_color | default: 'var(--primary)' }};">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="benefit-pillars__subheading" style="color: {{ section.settings.subheading_color | default: 'var(--muted)' }};">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="benefit-pillars__grid">
      {% for block in section.blocks %}
        <div class="pillar" {{ block.shopify_attributes }}>
          {% if block.settings.icon_image != blank %}
            <div class="pillar__icon-image">
              <img 
                src="{{ block.settings.icon_image | image_url: '200x' }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
              >
            </div>
          {% elsif block.settings.icon_emoji != blank %}
            <div class="pillar__icon-emoji">{{ block.settings.icon_emoji }}</div>
          {% endif %}
          
          <h3 class="pillar__title" style="color: {{ block.settings.title_color | default: 'var(--primary)' }};">{{ block.settings.title }}</h3>
          
          {% if block.settings.description != blank %}
            <p class="pillar__description" style="color: {{ block.settings.description_color | default: 'var(--muted)' }};">{{ block.settings.description }}</p>
          {% endif %}
          
          {% if block.settings.benefit != blank %}
            <div class="pillar__benefit" style="color: {{ block.settings.benefit_color | default: 'var(--accent)' }};">{{ block.settings.benefit }}</div>
          {% endif %}
          
          {% if block.settings.link_url != blank and block.settings.link_text != blank %}
            <a href="{{ block.settings.link_url }}" class="btn btn-secondary" style="border-color: {{ block.settings.link_color | default: 'var(--text)' }}; color: {{ block.settings.link_color | default: 'var(--text)' }};">
              {{ block.settings.link_text }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.benefit-pillars {
  padding: 4rem 0;
}

.benefit-pillars__subheading {
  font-size: 1.125rem;
  margin-top: 1rem;
}

.benefit-pillars__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.pillar {
  text-align: center;
  padding: 2rem 1rem;
  border-radius: var(--radius);
  transition: transform 0.2s ease;
  background: white;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.pillar:hover {
  transform: translateY(-4px);
}

.pillar__icon-image {
  width: 4rem;
  height: 4rem;
  margin: 0 auto 1.5rem;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pillar__icon-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.pillar__icon-emoji {
  width: 4rem;
  height: 4rem;
  margin: 0 auto 1.5rem;
  background: var(--accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: white;
}

.pillar__title {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 1rem;
}

.pillar__description {
  line-height: 1.6;
  margin-bottom: 1rem;
}

.pillar__benefit {
  font-weight: 600;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .benefit-pillars {
    padding: 2rem 0;
  }
  
  .benefit-pillars__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  
  .pillar {
    padding: 1.5rem 1rem;
  }
}
</style>

