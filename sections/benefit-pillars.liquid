{% comment %}
  Benefit Pillars Section - 3-6 pijlers (spieren/slaap/stress/herstel)
{% endcomment %}

<section class="benefit-pillars">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-4">
        <h2 class="h2">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="benefit-pillars__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="benefit-pillars__grid">
      {% for block in section.blocks %}
        <div class="pillar" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="pillar__icon">
              {{ block.settings.icon }}
            </div>
          {% endif %}
          
          <h3 class="pillar__title">{{ block.settings.title }}</h3>
          
          {% if block.settings.description != blank %}
            <p class="pillar__description">{{ block.settings.description }}</p>
          {% endif %}
          
          {% if block.settings.benefit != blank %}
            <div class="pillar__benefit">{{ block.settings.benefit }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.benefit-pillars {
  padding: 4rem 0;
  background: white;
}

.benefit-pillars__subheading {
  font-size: 1.125rem;
  color: var(--muted);
  margin-top: 1rem;
}

.benefit-pillars__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.pillar {
  text-align: center;
  padding: 2rem 1rem;
  border-radius: var(--radius);
  transition: transform 0.2s ease;
}

.pillar:hover {
  transform: translateY(-4px);
}

.pillar__icon {
  width: 4rem;
  height: 4rem;
  margin: 0 auto 1.5rem;
  background: var(--accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: white;
}

.pillar__title {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--primary);
}

.pillar__description {
  color: var(--muted);
  line-height: 1.6;
  margin-bottom: 1rem;
}

.pillar__benefit {
  font-weight: 600;
  color: var(--accent);
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

@media (max-width: 768px) {
  .benefit-pillars {
    padding: 2rem 0;
  }
  
  .benefit-pillars__grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  
  .pillar {
    padding: 1.5rem 1rem;
  }
}
</style>

